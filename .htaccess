# This is a tiny but powerful configuration file that sits in your root folder (the same place as index.php).

RewriteEngine On

# 1. Force HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# 2. Remove .php extension from URLs
# First, check if the request is for a file that exists
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
# Then, try to find a .php file with that name
RewriteRule ^([^\.]+)$ $1.php [NC,L]
